function checkBattle($battleLog, $battleIndex) {

    $battleTime = $battleLog->get($battleIndex)->battleTime();
    $battleDate = substr($battleTime,0,8);
    $currentDate = gmdate('Ymd');

    if (battleDate===$currentDate)
     return true;
    else
     return false;
}

